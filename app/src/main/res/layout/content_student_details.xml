<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.robertszekely.teacherplanner.activity.StudentDetailsActivity"
    tools:showIn="@layout/activity_student_details">


    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/com_facebook_profile_picture_blank_square" />

    <TextView
        android:id="@+id/nameTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:textSize="30sp"
        tools:text="George Popescu"/>

    <View style="@style/Divider"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:padding="10dp">
            <!--<TextView-->
            <!--android:id="@+id/textEmail"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_below="@+id/nameTextView"-->
            <!--android:padding="10dp"-->
            <!--android:text="@string/email"/>-->
            <ImageView
                android:id="@+id/phoneImageView"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:padding="10dp"
                android:src="@drawable/ic_phone_call" />
            <TextView
                android:id="@+id/phoneNumberTextView"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:gravity="center"
                android:layout_toEndOf="@id/phoneImageView"
                android:padding="10dp"
                tools:text="(0752) 142 950" />
            <ImageView
                android:id="@+id/emailImageView"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_below="@id/phoneImageView"
                android:padding="10dp"
                android:src="@drawable/ic_message" />

            <TextView
                android:id="@+id/emailTextView"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:gravity="center"
                android:layout_below="@id/phoneNumberTextView"
                android:layout_toEndOf="@+id/emailImageView"
                android:padding="10dp"
                tools:text="popescu@email.com" />

            <ImageView
                android:id="@+id/progressImageView"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:padding="10dp"
                android:layout_below="@id/emailImageView"
                android:src="@drawable/ic_progress"/>
            <TextView
                android:id="@+id/progressTextView"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:paddingStart="10dp"
                android:gravity="center"
                tools:text="100"
                android:layout_toEndOf="@id/progressImageView"
                android:layout_below="@+id/emailTextView" />
            <TextView
                android:id="@+id/percentTextView"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:gravity="center"
                android:text="@string/percent_symbol"
                android:layout_toEndOf="@id/progressTextView"
                android:layout_below="@+id/emailTextView" />

            <View style="@style/Divider"
                android:id="@+id/detailsDivider"
                android:layout_below="@id/progressTextView"
                android:layout_marginTop="20dp"/>
            <Button
                android:layout_marginTop="20dp"
                android:id="@+id/addMeetingButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/detailsDivider"
                android:text="new meeting"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/addMeetingButton">
            <Button
                android:id="@+id/iterationsButton"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="Iterations"/>
            <Button
                android:id="@+id/meetingsButton"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="Meetings"/>
            </LinearLayout>
        </RelativeLayout>
    </ScrollView>
</LinearLayout>
