<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_gravity="start"
    android:layout_height="80dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/profilePhotoImageView"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            app:srcCompat="@drawable/com_facebook_profile_picture_blank_square" />

        <TextView
            android:id="@+id/studentNameTextView"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_above="@+id/studentEmailTextView"
            android:layout_toLeftOf="@+id/progressTextView"
            android:layout_toStartOf="@+id/progressTextView"
            android:gravity="start"
            android:paddingBottom="10dp"
            android:paddingLeft="2dp"
            android:paddingTop="10dp"
            android:text="James William"
            android:textAlignment="viewStart"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/progressTextView"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:padding="5dp"
            android:text="50%"
            android:textSize="15sp"
            android:layout_alignParentTop="true" />

        <TextView
            android:id="@+id/studentEmailTextView"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_toLeftOf="@+id/progressTextView"
            android:layout_toRightOf="@+id/profilePhotoImageView"
            android:layout_toStartOf="@+id/progressTextView"
            android:paddingBottom="5dp"
            android:paddingLeft="2dp"
            android:text="email@something.com"
            android:textColor="@color/com_facebook_button_background_color_disabled" />

        <!--<TextView-->
            <!--android:id="@+id/textView8"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_alignParentBottom="true"-->
            <!--android:layout_toLeftOf="@+id/progressTextView"-->
            <!--android:padding="15dp"-->
            <!--android:text="Progress:"-->
            <!--android:textSize="17sp" />-->
    </RelativeLayout>

</android.support.v7.widget.CardView>